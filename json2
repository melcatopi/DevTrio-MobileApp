      const path = document.getElementById('searchPath').value.trim();
      if (!path) {
        alert('æ¤œç´¢ãƒ‘ã‚¹ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
        return;
      }

      console.log(`ç¾åœ¨ã®ãƒ•ã‚¡ã‚¤ãƒ«æ¤œç´¢: "${path}"`);
      const file = jsonFiles[currentFileIndex];
